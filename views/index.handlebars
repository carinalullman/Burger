<h1>Eat Da Burger</h1>

<table>
  <td>
    <img src="/assets/img/burger.jpg" alt="burger clip art" class="image-formatter">
  </td>
  <tr>
    <td>
      <h2>Pick a burger!</h2>
    </td>
    <td></td>
    <td>
      <h2>You devoured the following burgers:</h2>
    </td>
  </tr>
  <tr>
    <td>
      <ul>
        {{#each burgers}}
        {{#unless isDevoured}}
        {{> burger/burger-block isDevoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </td>

    <td>
      <ul>
        {{#each burgers}}
        {{#if isDevoured}}
        {{> burger/burger-block isDevoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </td>
  </tr>
</table>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="burger_name">
  </div>

  <div class="form-group">
    <label for="dev">Devour?</label><br>
    <input type="#" name="isDevoured" value="1" checked> Devour!<br>
    <input type="#" name="isDevoured" value="0"> X X X
  </div>
{{!-- Make this look pretty! --}}
  <button type="submit">Add Burger</button>
</form>